<style lang="scss">
  :root {
    --grey: rgb(112, 112, 112);
    --light-grey: rgb(200, 200, 200);
  }
  svg {
    width: 30px;
    height: 30px;
  }
  .logo {
    fill: var(--grey);
    transition: fill 120ms ease-in-out 0s;
  }
  .twitter {
    width: 45px;
    height: 45px;
    &:hover .logo {
      fill: rgb(29, 161, 242);
    }
  }

  .mastodon {
    position: relative;
    width: 30px;
    height: 30px;
    .mastodon-black,
    .mastodon-purple {
      position: absolute;
      top: 0;
      left: 0;
      transition: all 120ms ease-in-out;
    }
    .mastodon-black {
      opacity: 1;
    }
    .mastodon-purple {
      opacity: 0;
    }
    &:hover {
      .mastodon-black {
        opacity: 0;
      }
      .mastodon-purple {
        opacity: 1;
      }
    }
  }
  .github:hover .logo {
    fill: rgb(36, 41, 46);
  }
  .devto:hover .logo {
    fill: rgb(10, 10, 10);
  }
  .dark .icon {
    fill: var(--grey);
  }
  .light .icon {
    fill: var(--light-grey);
  }
  @media (prefers-color-scheme: dark) {
    .logo {
      fill: var(--light-grey);
    }
    .github:hover .logo,
    .devto:hover .logo {
      fill: rgb(255, 255, 255);
    }
  }
</style>

